<Window x:Class="CourierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Tellimus" HorizontalAlignment="Left" Margin="252,27,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="52"/>
        <Button Content="Press to me" HorizontalAlignment="Left" Margin="239,78,0,0" VerticalAlignment="Top" Click="Button_Click" Grid.Row="1" Height="20" Width="66"/>
        <Label Content="" HorizontalAlignment="Left" Margin="348,75,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="10"/>
        <ListView Name="UsersListView" Margin="10,106,10,10" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="150"/>
                    <GridViewColumn Header="Возраст" DisplayMemberBinding="{Binding Age}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
