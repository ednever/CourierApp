<Window x:Class="CourierApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierApp"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="44"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Delivery Cost Calculator" FontSize="16" FontWeight="Bold" Margin="10,10,10,10" Grid.Row="0"/>
        <!-- Выбор города -->
        <TextBlock Text="Select City:" Margin="5,63,719,309"/>
        <ComboBox x:Name="CityComboBox" Margin="120,63,569,309">
            <ComboBoxItem Content="Tallinn"/>
            <ComboBoxItem Content="Tartu"/>
            <ComboBoxItem Content="Pärnu"/>
        </ComboBox>

        <!-- Выбор транспорта -->
        <TextBlock Text="Select Transport:" Margin="5,90,685,282"/>
        <ComboBox x:Name="TransportComboBox" Margin="120,90,569,282">
            <ComboBoxItem Content="Car"/>
            <ComboBoxItem Content="Scooter"/>
            <ComboBoxItem Content="Bicycle"/>
        </ComboBox>

        <!-- Кнопка для запроса и отображение результата -->
        <Button x:Name="CalculateButton" Content="Calculate Cost" Click="CalculateButton_Click" Margin="120,133,569,244"/>
        <TextBlock x:Name="ResultTextBlock" Text="Result: " FontSize="14" Margin="10,0,10,0" VerticalAlignment="Center" Height="19"/>

        <!-- Изменение частоты запроса -->
        <TextBlock Text="Weather data request configuration" FontSize="16" FontWeight="Bold" Margin="464,10,17,353"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="457,52,17,307">
            <TextBlock Text="Update frequency (minutes):" Margin="10,0,5,0" VerticalAlignment="Center"/>
            <TextBox x:Name="UpdateFrequencyTextBox" Width="50" Height="25" Text="60" VerticalAlignment="Center"/>
            <Button Content="Set Frequency" Width="100" Height="30" Click="SetFrequencyButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
