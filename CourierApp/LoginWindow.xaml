<Window x:Class="CourierApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierApp"
        mc:Ignorable="d"
        Title="Login" 
        Height="250" Width="250"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <Label Content="Username (test)" Grid.Row="1"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="2" Margin="0,4,0,6"/>

        <Label Content="Password (password)" Grid.Row="2" Margin="0,23,0,-22"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Margin="0,55,0,-44"/>

        <Button Content="Login" Grid.Row="2" Click="LoginButton_Click" Margin="0,102,0,-101"/>
    </Grid>
</Window>
