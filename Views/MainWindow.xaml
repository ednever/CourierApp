<Window x:Class="CourierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Weather Data" Width="150" Height="30" Click="AddDataButton_Click" Grid.Row="0" Margin="5"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <TextBlock Text="Update frequency (minutes):" Margin="10,0,5,0" VerticalAlignment="Center"/>
            <TextBox x:Name="UpdateFrequencyTextBox" Width="50" Height="25" Text="60" VerticalAlignment="Center"/>
            <Button Content="Set Frequency" Width="100" Height="30" Click="SetFrequencyButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
        <DataGrid x:Name="WeatherDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding WeatherList}" Grid.Row="1" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Station Name" Binding="{Binding StationName}" />
                <DataGridTextColumn Header="WMO Code" Binding="{Binding WMOCode}" />
                <DataGridTextColumn Header="Air Temperature (°C)" Binding="{Binding AirTemperature, StringFormat={}{0:F1}}" />
                <DataGridTextColumn Header="Wind Speed (m/s)" Binding="{Binding WindSpeed, StringFormat={}{0:F1}}" />
                <DataGridTextColumn Header="Phenomenon" Binding="{Binding Phenomenon.Name}" />
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" />
            </DataGrid.Columns>
            <DataGrid.Background>LightGray</DataGrid.Background>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>
